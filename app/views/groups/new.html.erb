<div class = "container">
 <div class = "row">
  
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   
    
    <% if @group.errors.any? %>
      <div class="alert-box">
        <h2><%= @group.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <h2>Create Group</h2>
    
    <%= form_with(model: @group, url: groups_path, method: :post, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, 'グループ名' %><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"グループ名", class: "form-control"%><br>
      </div>
      
      <div class="form-group">
        <%= f.label :introduction, '紹介文' %><br>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" , class: "form-control"%><br>
      </div>
      
      <div class="form-group">
        <%= f.label :image, 'グループ画像' %><br>
        <%= f.file_field :image, placeholder: "グループ画像", accept: "image/*" %><br>
      </div>
      
      <%= f.submit "Create Group", class: "btn btn-info"%>
    <% end %>
  </div>
 </div>
</div>