<%= render 'commons/common', book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
    <table class="table">

      <h2>Users</h2>
      <div><%=link_to "グループを作成する", new_group_path %> | <%= link_to "グループ一覧", groups_path %></div>
       <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
            <th></th>
            <th colspan="１"></th>
        </tr>
       </thead>

    <% @users.each do |user| %>
      <tbody>
         <tr>
           <td><%= image_tag user.get_profile_image(100,100) %></td>
           <td> <%= user.name %></td>
           <td><p>フォロー数：<%= user.followings.count  %></p></td>
           <td><p>フォロワー数：<%= user.followers.count %></p></td>
           <td>
            <% if current_user != user %>
              <% if current_user &. has_followed?(user) %>
                <%= link_to 'フォロー外す',user_unfollows_path(user), data: {method: 'post' } %>
              <% else %>
                <%= link_to 'フォローする', user_follows_path(user), data: {method: 'post'} %>
              <% end %>
            <% end %>
           </td>
           <td><%= link_to "Show", user_path(user) %></td>
         </tr>
      </tbody>
    <% end %>
    </table>
  </div>
  </div>
</div>
