<%= render 'commons/common', book: @book, user: @user %>
<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th></th>
      <th colspan="１"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
    <tr>
      <td><%= link_to image_tag(book.user.get_profile_image(100,100)),user_path(book.user_id) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body%></td>
      <td>
        <div id = "index_like_<%= book.id %>">
          <%= render 'favorites/favorite', book: book %>
        </div>
      </td>
      <td>
        <p>コメント数：<%= book.comments.count %></p>
      </td>
      
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
    